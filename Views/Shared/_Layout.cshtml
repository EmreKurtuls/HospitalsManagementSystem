<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"] - Kültür Hospital Management System</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/style.css">
</head>
<body>
    <div class="header">
        <div class="logo" onclick="goToHome()">
            <img src="~/Images/logo.png" alt="Kültür Hospital Logo">
            <h1>Kültür Hospital</h1>
        </div>
        <div class="nav-links">
            <a href="/Home/Index">Home</a>
            <a href="/Home/About">About Us</a>
            <a href="/Home/Contact">Contact Us</a>
        </div>
        <div class="login">
            <a href="~/Account/Login">
                <img src="~/Images/login.png"  class="login-image" />
            </a>
            
        </div>
    </div>

    <div class="container">
        @RenderBody()
    </div>

    <footer>
        &copy; 2024 Kültür Hospital. All rights reserved.
    </footer>

    <script src="~/Scripts/layout-navigation.js"></script>
    <script src="~/Scripts/jquery.min.js" defer></script>
    <script src="~/Scripts/popper.min.js" defer></script>
    <script src="~/Scripts/bootstrap.bundle.min.js" defer></script>
    <script src="~/Scripts/jquery-3.0.0.min.js" defer></script>
    <script src="~/Scripts/plugin.js" defer></script>
    <script src="~/Scripts/jquery.mCustomScrollbar.concat.min.js" defer></script>
    <script src="~/Scripts/custom.js" defer></script>
    <script src="~/Scripts/jquery.validate.js" defer></script>
    <script src="https:cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.js" defer></script>
    
    @RenderSection("Scripts", required: false)
</body>
</html>